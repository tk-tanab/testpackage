{
    "editor.tabSize": 4,
    "files.eol": "\n",
    "python.defaultInterpreterPath": ".venv/bin/python3.10",
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true, // type checker
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.formatOnPaste": true,
    "editor.minimap.autohide": true, // hide minimap(side viewer)
    "editor.minimap.enabled": false, // disenable minimap
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.lintOnSave": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=E203,W503,W504"
    ],
    "editor.formatOnSave": true,
    "python.formatting.provider": "black", // autoformatter
    "[python]": {
        "editor.defaultFormatter": null,
    },
}